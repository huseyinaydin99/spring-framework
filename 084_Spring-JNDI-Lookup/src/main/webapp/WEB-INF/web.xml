<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>payment-resource</display-name>

    <!-- Root Spring context: dataSource, SessionFactory, transactionManager, @Component/@Service/@Repository vb. -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/spring-hibernate.xml</param-value>
    </context-param>

    <!-- Root ApplicationContext'i ayağa kaldıran listener -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!-- DispatcherServlet: REST/MVC endpoint'ler buradan karşılanır -->
    <servlet>
        <servlet-name>springRest</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <!-- Ayrı bir MVC config dosyası kullanacaksak buraya init-param ekleyebiliriz
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/spring-mvc.xml</param-value>
        </init-param>
        -->
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>springRest</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- JNDI DataSource referansı (sunucudaki jdbc/huseyinaydin kaynağı için) -->
    <resource-ref>
        <description>Payment DB</description>
        <res-ref-name>jdbc/huseyinaydin</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>